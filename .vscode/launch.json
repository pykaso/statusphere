  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch ApiServer",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/apiserver",
      "env": {
        "POSTGRES_HOST": "localhost",
        "POSTGRES_PORT": "5432",
        "POSTGRES_USER": "statusphere_user",
        "POSTGRES_PASSWORD": "statusphere_password",
        "POSTGRES_DATABASE": "statusphere_db"
      }
    },
    {
      "name": "Launch jobrunner",
      "type": "go",
      "request": "launch",
      "mode": "auto",
